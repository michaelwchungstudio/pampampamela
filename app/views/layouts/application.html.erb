<!DOCTYPE html>
<html>
  <head>
    <title>Pamela</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav>
    <% if admin_signed_in? || instructor_signed_in? || student_signed_in? %>
      <% if admin_signed_in?%>
      <li><%= link_to 'Sign Out', destroy_admin_session_path, method: :delete%></li>
      <li><%= link_to 'Edit Admin Information', edit_admin_registration_path%></li>
      <% elsif instructor_signed_in?%>
      <li><%= link_to 'Sign Out', destroy_instructor_session_path, method: :delete%></li>
      <li><%= link_to 'Edit Instructor Information', edit_instructor_registration_path%></li>
      <% elsif student_signed_in?%>
      <li><%= link_to 'Sign Out', destroy_student_session_path, method: :delete%></li>
      <li><%= link_to 'Edit Student Information', edit_student_registration_path%></li>
      <% end %>
    <% else %>
      <li><%= link_to 'Sign In As Admin', new_admin_session_path%></li>
      <li><%= link_to 'Sign Up As Admin', new_admin_registration_path%></li>
      <br>
      <li><%= link_to 'Sign In As Instructor', new_instructor_session_path%></li>
      <li><%= link_to 'Sign Up As Instructor', new_instructor_registration_path%></li>
      <br>
      <li><%= link_to 'Sign In As Student', new_student_session_path%></li>
      <li><%= link_to 'Sign Up As Student', new_student_registration_path%></li>
    <% end %>
  </nav>
    <%= yield %>
  </body>
</html>
